<Page x:Class="Nyam_Nyam.Pages.ListOfIngredientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nyam_Nyam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListOfIngredientsPage">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock Text="List of Ingredients"
                       Style="{StaticResource Header}"
                       Margin="10,0,0,10" />
                <TextBlock Style="{StaticResource Content2}"
                    
                    x:Name="TBFullCost"
                       Text=""
                       FontSize="16"
                       HorizontalAlignment="Right"
                       Margin="0,0,10,10" />
            </StackPanel>
            <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  x:Name="LVIngredients"
                  Width="auto"
                  d:ItemsSource="{d:SampleData ItemCount=15}"
                  Grid.Row="1"
                  BorderThickness="0"
                     >
                <ListView.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#fed7c1"/>
                        <GradientStop Color="#d5c847" Offset="1"/>
                        <GradientStop Color="#fdb249" Offset="0.5"/>
                    </LinearGradientBrush>
                </ListView.Background>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1"
                            BorderBrush="Black"
                                Width="320"
                                Height="120">
                            
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="30" />
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding Image}"></Image>
                                <Rectangle Fill="Black" Opacity="0.5"></Rectangle>
                                <StackPanel Margin="0,0,10,0"
                                        Grid.Column="0"
                                             >
                                    <TextBlock Style="{StaticResource Content2}"
                                        Text="{Binding Name}"
                                           FontWeight="Bold"
                                           FontSize="16" 
                                               TextWrapping="Wrap"
                                               Foreground="WhiteSmoke"
                                               Margin="5 20 0 0"/>
                                    <TextBlock Style="{StaticResource Content3}" 
                                               Foreground="WhiteSmoke"
                                        Text="{Binding PriceInDollars, StringFormat='Price: ${0}'}"
                                           FontSize="14" 
                                               Margin="5 0 0 0"/>
                                    <TextBlock FontSize="14">
                                <Hyperlink 
                                    Foreground="DarkRed"
                                           x:Name="HLDelete"
                                           Click="HLDelete_Click"
                                           >
                                   <TextBlock Text="Delete" Margin="5 0 0 0"
                                              ></TextBlock>
                                </Hyperlink>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                          Margin="10 0 0 0"  >
                                    <TextBox x:Name="TBСount"
                                         Text="{Binding AvailableCount, UpdateSourceTrigger=PropertyChanged}"
                                         VerticalAlignment="Center"
                                         Width="30"
                                         Height="30"
                                         VerticalContentAlignment="Center"
                                         HorizontalContentAlignment="Center"
                                         MaxLength="2"
                                         Margin="0,0,5,0"
                                         FontSize="14"
                                         PreviewTextInput="TBСount_PreviewTextInput"
                                         TextChanged="TBСount_TextChanged" 
                                         IsEnabled="False"/>
                                    <TextBlock Text="{Binding Unit.ShortName}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"
                                           FontSize="14" 
                                               Width="30"/>
                                </StackPanel>

                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Grid.Column="2">
                                    <Button x:Name="BPlus"
                                        Content="+"
                                        Click="BPlus_Click"
                                        Width="30"
                                        Height="30"
                                        Margin="0 0 0 5"
                                        FontSize="14" 
                                        Background="#fdb249"
                                            />
                                    <Button x:Name="BMinus"
                                        Content="-"
                                        Width="30"
                                        Height="30"
                                        Click="BMinus_Click"
                                        FontSize="14" 
                                        Background="#fdb249"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </Grid>
    </Grid>
</Page>
